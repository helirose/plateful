{# templates/menu-section.twig #}

<details class="plateful-menu-section" name="{{ section_name }}" open="true">
  <summary id="{{ section_name|lower|replace({' ': '-'}) }}" class="plateful-menu-section-title">
    <h3>{{ section_name }}</h3>
  </summary>
  {{ content|raw }}
  <div class="plateful-top-link">
    <a href="#">Back to top</a>
  </div>
</details>